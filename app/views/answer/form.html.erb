<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="title" style="margin: 0px 0px 30px 15px"> Request Permission for <%= @course.department.split("-").first + " " + @course.course_number + " " + @course.section_number%> </h1>
      <form action="/data">
        <div class="form-group">
          <input type="hidden" name="department" value="<%= @course.department %>">
          <input type="hidden" name="course_number" value="<%= @course.course_number %>">
          <input type="hidden" name="section_number" value="<%= @course.section_number %>">
          <% z=1000 %>
          <% w=270 %>
          <% for question in @course.questions %>
            <div class="form-group required" style="margin: 15px;">
              <p style="font-family: 'Roboto', sans-serif;font-size: 18px;" class="control-label"><%= question.question_text %></p>
              <% if question.id == 1 %>
                <input style="font-family: 'Roboto', sans-serif;font-size: 15px;" type= "text" class="form-control" id="reasons" value="<%= @user.first_name %> <%= @user.last_name %>" name="<%= question.question_text %>" readonly>
              <% elsif question.id == 2 %>
                <input style="font-family: 'Roboto', sans-serif;font-size: 15px;" type= "text" class="form-control" id="reasons" value="<%= @user.email %>" name="<%= question.question_text %>" readonly>
              <% elsif question.id == 3 %>
                <input style="font-family: 'Roboto', sans-serif;font-size: 15px;" type= "text" class="form-control" id="reasons" value="<%= @user.grad_year %>" name="<%= question.question_text %>" readonly>
              <% elsif question.question_type == "Checkbox" %>
                <% question.option.each do |option| %>
                    <div>
                        <input style="font-family: 'Roboto', sans-serif;font-size: 15px;" type="checkbox" name= "<%=question.question_text%>[]" id= "<%= option %><%= z %>" value= "<%= option %><%= z %>" id = "cb"/>
                        <label id="<%= z %>" for="<%= option %><%= z %>">
                        <%= option %> 
                        </label>
                        <% z += 1 %>
                    </div>
                <% end %>
              <% elsif question.question_type == "Radio" %>
                <% question.option.each do |option| %>
                    <div>
                        <input style="font-family: 'Roboto', sans-serif;font-size: 15px;" type="radio" name= "<%=question.question_text%>" id= "<%= option %><%= w %>" value= "<%= option %><%= w %>" id = "rb"/>
                        <label id="<%= w %>" for="<%= option %><%= w %>">
                        <%= option %>
                        </label>
                        <% w += 1 %>
                    </div>
                <% end %>
              <% elsif question.question_type == "Long Answer" %>
                <textarea style="font-family: 'Roboto', sans-serif;font-size: 15px;" class="form-control" id="exampleFormControlTextarea1" name="<%= question.question_text %>" rows="4" required></textarea>
              <% else %>
                  <input style="font-family: 'Roboto', sans-serif;font-size: 15px;" type= "text" class="form-control" id="reasons"  name="<%= question.question_text %>" required>
              <% end %>
            </div>
          <% end %>
          <div class="col-sm-10">
            <%= link_to "Cancel", root_path, class:"btn btn-outline-danger", style:"margin:10px 0px 10px" %>
            <button type="submit" class="btn btn-dark">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>