<div class="container">
  <h2> Request Permission for <%= @course_request.course.department + " " + @course_request.course.course_number + " " + @course_request.course.section_number%> </h2>
  <form action="/data">
    <div class="form-group">
      <label for="name"> Full name: </label>
      <input type="text" class="form-control" id="name" name="name">
    </div>

    <script type="text/javascript">
      document.getElementById('name').value = "<%= @user.first_name %>" + " " + "<%= @user.last_name %>";
    </script>

    <div class="form-group">
      <label for="email"> Email: </label>
      <input type="email" class="form-control" id="email" placeholder="Ex: mp3@duke.edu" name="email">
    </div>

    <script type="text/javascript">
      document.getElementById('email').value = "<%= @user.email %>";
    </script>

    <div class="form-group">
      <label for="gradyear"> Graduation year: </label>
      <input type="text" class="form-control" id="gradyear" placeholder="Ex: Maple Adkisson" name="gradyear">
    </div>

    <script type="text/javascript">
      document.getElementById('gradyear').value = "<%= @user.grad_year %>";
    </script>

    <% for question in @course_request.course.questions %>
      <div class="form-group">
        <p><%= question.question_text %></p>
        <% if question.question_type == "Checkbox" %>
            <% question.option.each do |option| %>
                <div>
                    <input type="checkbox" name= "<%=question.question_text%>[]"" id= "<%= option %>" value= "<%= option %>" id = "cb"/> <%= option %>
                </div>
            <% end %>
        <% elsif question.question_type == "Radio" %>
            <% question.option.each do |option| %>
                <div>
                    <input type="radio" name= "<%=question.question_text%>" id= "<%= option %>" value= "<%= option %>" id = "rb"/> <%= option %>
                </div>
            <% end %>
        <% else %>
            <input type= "text" class="form-control" id="reasons"  name="<%= question.id %>"> 
        <% end %>
      </div>
    <% end %>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>

