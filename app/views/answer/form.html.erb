<div class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="box">
        <h1 class="title"> Request Permission for <%= @course.department.split("-").first + " " + @course.course_number + " " + @course.section_number%> </h1>
        <form action="/data">
          <div class="form-group">
            <input type="hidden" name="department" value="<%= @course.department %>">
            <input type="hidden" name="course_number" value="<%= @course.course_number %>">
            <input type="hidden" name="section_number" value="<%= @course.section_number %>">
            
            <% for question in @course.questions %>
              <% z=1000 %>
              <% w=-1000 %>
              <div class="form-group required" style="margin: 15px;">
                <p style="font-family: 'Roboto', sans-serif;font-size: 18px;" class="control-label"><%= question.question_text %></p>
                <% if question.question_type == "Checkbox" %>
                  <% question.option.each do |option| %>
                      <div>
                          <input style="font-family: 'Roboto', sans-serif;font-size: 15px;" type="checkbox" name= "<%=question.question_text%>[]" id= "<%= option %><%= z %>" value= "<%= option %>" id = "cb"/>
                          <label for="<%= option %><%= z %>">
                          <%= option %>
                          </label>
                          <% z = z+1 %>
                      </div>
                  <% end %>
                <% elsif question.question_type == "Radio" %>
                  <% question.option.each do |option| %>
                      <div>
                          <input style="font-family: 'Roboto', sans-serif;font-size: 15px;" type="radio" name= "<%=question.question_text%>" id= "<%= option %><%= w %>" value= "<%= option %>" id = "rb"/>
                          <label for="<%= option %><%= w %>">
                          <%= option %>
                          </label>
                          <% w = w+1 %>
                      </div>
                  <% end %>
                <% elsif question.question_type == "Long Answer" %>
                  <textarea style="font-family: 'Roboto', sans-serif;font-size: 15px;" class="form-control" id="exampleFormControlTextarea1" name="<%= question.question_text %>" rows="4" required></textarea>
                <% else %>
                    <input style="font-family: 'Roboto', sans-serif;font-size: 15px;" type= "text" class="form-control" id="reasons"  name="<%= question.question_text %>" required>
                <% end %>
              </div>
            <% end %>
            <div class="col-sm-10">
              <%= link_to "Cancel", root_path, class:"btn btn-outline-danger", style:"margin:10px 0px 10px" %>
              <button type="submit" class="btn btn-dark">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<p class="spacer"></p>
