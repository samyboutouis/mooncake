<div class="box">
  <div class="container">
    <h1 class="title"> Request Permission for <%= @course.department.split("-").first + " " + @course.course_number + " " + @course.section_number%> </h1>
    <form action="/data">
      <div class="form-group">

      <% for question in @course.questions %>
        <div class="form-group">
          <p><%= question.question_text %></p>
          <% if question.question_type == "Checkbox" %>
            <% question.option.each do |option| %>
                <div>
                    <input type="checkbox" name= "<%=question.question_text%>[]" id= "<%= option %>" value= "<%= option %>" id = "cb"/> <%= option %>
                </div>
            <% end %>
          <% elsif question.question_type == "Radio" %>
            <% question.option.each do |option| %>
                <div>
                    <input type="radio" name= "<%=question.question_text%>" id= "<%= option %>" value= "<%= option %>" id = "rb"/> <%= option %>
                </div>
            <% end %>
          <% elsif question.question_type == "Long Answer" %>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="<%= question.question_text %>" rows="4"></textarea>
          <% else %>
              <input type= "text" class="form-control" id="reasons"  name="<%= question.question_text %>"> 
          <% end %>
        </div>
      <% end %>
      <div class="col-sm-10">
        <button type="submit" class="btn btn-dark">Submit</button>
        <%= link_to "Cancel", search_url, class:"btn btn-dark", style:"margin:10px 0px 10px" %>
      </div>
    </form>
  </div>
</div>

