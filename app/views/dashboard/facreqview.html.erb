
<select class="custom-select my-1 mr-sm-2 question" id="inlineFormCustomSelectPref"  name="question">
    <option selected>Sort by</option>
    <% questions = @course.questions.pluck(:question_text) %>
    <% for question in questions do %>
        <option name = 'question'><%= question %></option>
    <% end %>
</select>

<div class="table-responsive">
    <table data-toggle="table" class="table table-striped", style="background-color:white;"> 
      <thead>
        <% @course.questions.each do |question| %>
        <th> <%= question.question_text %> </th>
        <% end %>
      </thead>
      <tbody id= "answers" class = "ans">
        <% @answer.each do |answer| %>
        <tr>
          <% answer.course_request.answers.each do |answer| %>
          <td><%= answer.answer_text %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
  </table>
</div>


