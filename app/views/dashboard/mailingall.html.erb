<div class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="box">
        <h1 class="title">Email All Students </h1> <br>
        <form action="/mailingall2">
        <input type="hidden" name="courseid" value="<%= @course.id %>">

          <div class="form-group"> 
            <label for= "subject"> Subject: 
            <input type="text" name="subject">
          </div>

          <div class="form-group">
            <label for= "body"> Body: 
            <textarea style="font-family: 'Roboto', sans-serif;font-size: 15px; width: 700px" class="form-control" id="exampleFormControlTextarea1" name="body" rows="10" columns="10"></textarea>
          </div>

          <div class="col-sm-10">
              <%= link_to "Cancel", requests_page_path(@course), class:"btn btn-outline-danger", style:"margin:10px 0px 10px" %>
              <button type="submit" class="btn btn-dark">Send</button>
          </div>

          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<p class="spacer"></p>