<div class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="box">
        <h1 class="title">My Courses - <%= @user.first_name %> INSTRUCTOR </h1>
        <%= no_course(@user)%>
        <div class="container">
          <% i = 0 %>
          <% @courses.each do |course| %>
            <div class="row">
              <div class="col">
                <div class="request-box">
                  <%= course_status(course) %>

                  <a class="collapse-button" data-toggle="collapse" href="#multiCollapseExample<%= i %>" role="button" aria-expanded="false" aria-controls="multiCollapseExample<%= i %>">
                    <p class="course">
                      <%= course.department.split("-").first %> <%= course.course_number%> - <%= course.section_number%>
                      <span class="fa fa-chevron-right pull-right expand-icon"> + </span>
                      <span class="fa fa-chevron-down pull-right expand-icon"> - </span>
                    </p>
                  </a>

                  <div class="collapse multi-collapse" id="multiCollapseExample<%= i %>">
                    <div >
                      Permission Numbers Granted: <%= course.seats_taken %> / <%= course.capacity %> <br>
                      Number of Requests: <%= course.course_requests.length %> <br>
                      <!-- Permission Numbers: <%= course.permission_numbers %> <br> -->
                      <% if course.prereqs.first.name == "" %>
                        Prerequisites: N/A
                      <% else%>
                        Prerequisites: <% course.prereqs.each do |prereq| %>
                          <% if course.prereqs.last == prereq%>
                            <%= prereq.name %>
                          <% else %>
                            <%= prereq.name %>,
                          <%end%>
                        <% end %>
                      <% end %>
                      <br>
                      <% if course.published == false %>
                          <%= link_to "Edit Questions", question_path(course), method: :get, class:"btn btn-outline-primary" %>
                          <%= link_to "Publish", publish_page_path(course), method: :get, class:"btn btn-outline-primary" %>
        
                      <% else %>
                          <%= link_to "View Requests", requests_page_path(course), method: :get, class:"btn btn-outline-primary" %>
                          <%= link_to "Delete Course", delete_course_path(course), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-outline-danger" %>
                      <% end %>
      
                    </div>
                  </div>

                </div>
              </div>
            </div>
            <% i += 1 %>
          <% end %>
        </div>
        <a href="<%= new_course_path %>"><button class="btn btn-dark" type="button">Create a Course</button></a>
      </div>
    </div>
  </div>
</div>
<p class="spacer"></p>
