<div class="containernew">
  <div class="row">
    <div class="col">
        <h1 class="hello"> Hello, <%= @user.first_name %>!</h1> <br>
        <h1 class="subtitle"> Your Requests</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 order-md-last text-center dash-button">
      <a href="<%= search_path %>"><button class="btn btn-secondary" >Request Permission Number</button></a>
    </div>
    <div class="col-md-7 order-md-first">
      <%= no_request(@user)%>
      <% i = 0 %>
      <% for request in @course_request do %>
        <div class="bluebox">
          <a class="collapse-button" data-toggle="collapse" href="#multiCollapseExample<%= i %>" role="button" aria-expanded="false" aria-controls="multiCollapseExample<%= i %>">
            <%= active_request(request) %>
            <p>
              <%= request.course.department.split("-").first %> <%= request.course.course_number%> - <%= request.course.section_number %>
              <span class="fa fa-chevron-right pull-right expand-icon"></span>
              <span class="fa fa-chevron-down pull-right expand-icon"></span>
            </p>
          </a>
          <div class="collapse multi-collapse" id="multiCollapseExample<%= i %>">
              <div class='blue-info'>
                <p> Status: <%= request.status %> </p>
                  <% if request.permission_number != nil %>
                    <p> PermNo: <%= request.permission_number.number %> (expires on <%=request.permission_number.expire_date%>) </p>
                  <% end %>
                  <p><%= link_to "View request form", request_form_path(request), method: :get, class:"btn btn-light" %>
                  <% if request.status == "Under Review" %>
                    <%= link_to "Withdraw Request", withdraw_request_path(request), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-light btn-outline-danger"%>
                  <% end %></p>
              </div>
          </div>
          <% i += 1 %>
        </div>
      <% end %>
    </div>
</div>
