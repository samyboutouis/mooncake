<div class="col">
    <div class="box">
        <h1 class="title">Find Courses</h1>
        <form action= '/courserequests' method="get" id="courseform">
        <div class="form-group row">
            <select class="custom-select my-1 mr-sm-2 department" id="inlineFormCustomSelectPref" form="courseform" name="department" style="margin-left:15px;">
                <option selected>Choose Department</option>
                <% departments = @course.distinct.pluck(:department) %>
                <% for department in departments do %>
                    <option name = 'department'><%= department %></option>
                <% end %>
            </select>
        </div>
        <div class="form-group row">
            <select class="custom-select my-1 mr-sm-2 number" id="inlineFormCustomSelectPref" form="courseform" name="course_number" style="margin-left:15px;">
                <option selected>Choose Course Number</option>
            </select>
        </div>
        <div class="form-group row">
            <select class="custom-select my-1 mr-sm-2 section" id="inlineFormCustomSelectPref" form="courseform" name="section_number" style="margin-left:15px;">
                <option selected>Choose Section Number</option>
            </select>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
            <%= link_to "Cancel", root_path, class:"btn btn-outline-danger", style:"margin:10px 0px 10px" %>
            <button type="submit" class="btn btn-dark">Request</button>
            </div>
        </div>
        </form>
    </div>
</div>