<div class="col">
    <div class="box">
        <h1 class="title">Find Courses</h1>
        <form action= '/data_request'>
        <div class="form-group row">
            <select class="custom-select my-1 mr-sm-2 department" id="inlineFormCustomSelectPref">
                <option selected name = 'department'>Choose Department</option>
                <% departments = @courses.distinct.pluck(:department) %>
                <% for department in departments do %>
                    <option name = 'department'><%= department %></option>
                <% end %>
            </select>
        </div>
        <div class="form-group row">
            <select class="custom-select my-1 mr-sm-2 number" id="inlineFormCustomSelectPref">
                <option selected>Choose Course Number</option>
            </select>
        </div>
        <div class="form-group row">
            <select class="custom-select my-1 mr-sm-2 section" id="inlineFormCustomSelectPref">
                <option selected>Choose Section Number</option>
            </select>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Request</button>
            </div>
        </div>
        </form>
    </div>
</div>