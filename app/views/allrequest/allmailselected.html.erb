<div class="container">
  <div class="table_box2">
        <h1 class="title">Email Selected Students </h1> <br>
        <form action="/allmailselected2">
        <input type="hidden" name="selected" value="<%= @selected%>">
        <input type="hidden" name="courseid" value="<%= @course.id%>">

        <div class="form-group">
            <label for= "To"> To: 
            <textarea rows="1" name="To" cols="80" disabled> <%= @names %> </textarea>
          </div>

          <div class="form-group"> 
            <label for= "subject"> Subject: 
            <input type="text" name="subject">
          </div>

          <div class="form-group">
            <label for= "body"> Body: 
            <textarea style="font-family: 'Roboto', sans-serif;font-size: 15px; width: 700px" class="form-control" id="exampleFormControlTextarea1" name="body" rows="10" columns="10"></textarea>
          </div>

          <div class="col-sm-10">
              <%= link_to "Cancel", allrequests_path, class:"btn btn-outline-danger", style:"margin:10px 0px 10px" %>
              <button type="submit" class="btn btn-dark">Send</button>
          </div>


        </form>
 </div>
</div>
<p class="spacer"></p>