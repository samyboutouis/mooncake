<div class="container">
<div class="table_box">
  <h1 class="title">More Permission Numbers Required for <%= @course.department.split("-").first %> <%= @course.course_number%> - <%= @course.section_number%></h1>
  <p>Oh no! You have run out of permission numbers for this course. Please upload another excel file from DukeHub.</p>
  <br>
  <%= form_tag({action: :add}, multipart: true) do %>
    <%= file_field_tag 'file', class:"btn btn-dark" %>
    <%= hidden_field_tag "request", @request.id %>
    <%= submit_tag 'Submit', class:"btn btn-dark" %>
    <%if @course.primary == false %>
      <%= link_to "Cancel", requests_page_path(@course.cross_listing[0]), class:"btn btn-outline-danger", style:"margin:10px 0px 10px" %>
    <%else%>
      <%= link_to "Cancel", requests_page_path(@course), class:"btn btn-outline-danger", style:"margin:10px 0px 10px" %>
    <%end %>
 <% end %>

</div> 
</div> 
